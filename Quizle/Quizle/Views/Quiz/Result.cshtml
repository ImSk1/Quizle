@using Quizle.Web.Models
@using Quizle.Web.Models.Quiz;
@model ResultViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
    @if (Model.IsResultCorrect == true)
    {
        <h1 class="display-4">Congratulations your answer was correct!</h1>
        <p>Selelected answer: @Model.SelectedAnswer</p>
    }
    else
    {
        <h1 class="display-4">Your answer was incorrect!</h1>
        <p>Selelected answer: @Model.SelectedAnswer</p>
        <p>Correct answer: @Model.CorrectAnswer</p>
    }
    <form asp-action="Result" asp-controller="Quiz">
        <input type="submit" class="btn" value="Go Back">
    </form>
</div>

