@using Quizle.Web.Models
@model List<LeaderboardProfileViewModel>
<link href="~/css/leaderboard.css" rel="stylesheet" />


<div class="leaderboardcontainer">
    <div class="leaderboard">
        <div class="head">
            <h1 class="mt-3">Most active Players</h1>
        </div>
        <div class="leaderboardbody">
            <ol>
                @foreach (var leaderboardProfile in Model)
                {
                    <form asp-action="Leaderboard" asp-controller="Profile" method="post">
                    <li>

                        <mark>@leaderboardProfile.Username</mark>
                        <input type="submit" value="View Profile"class="btn" style="background-color: black !important" asp-route-profileId="@leaderboardProfile.ProfileId">
                        <small>QP: @leaderboardProfile.QuizPoints</small>


                    </li>
                    </form>
                }
            </ol>
        </div>
        <div class="mb-1">

            <h7>Most active Players</h7>
        </div>
    </div>
</div>